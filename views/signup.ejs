<% include ./partials/header %>
	<div class="container">

	<% if (message) { %>
	    <h2 style="margin: 1.5rem 0"><font color="red"><%= message %></font></h2>
	<% } %>

	<div class="row">
	  <div class="col-sm-6">
	    <div class="card" style="border: none;">
			<h3 class="card-title" style="margin-bottom: 1.5rem;">Sign Up</h3>
	      <div class="card-body">
						<form action="/signup" method="post">
							<div class="form-group">
								<input type="text" name="username" class="form-control" placeholder="Username">
							</div>
							<div class="form-group">
								<input type="text" name="first_name" class="form-control" placeholder="First Name">
							</div>
							<div class="form-group">
								<input type="text" name="last_name" class="form-control" placeholder="Last Name">
							</div>
							<div class="form-group">
								<input type="email" name="email" class="form-control" placeholder="Email">
							</div>
							<div class="form-group">
								<input type="password" name="password" onkeyup="validateSignupPassword(event)" class="form-control" id="password" placeholder="Password">
							</div>
							<div class="form-group">
								<input type="password" name="password" onkeyup="validateSignupPassword(event)" class="form-control" id="confirmPassword"  placeholder="Confirm Password">
							</div>

							<!-- Password Validation Messages -->
							<div>
								<div id="passwordNoticeMatch" class="password-hide">
									<small>Passwords do not match</small>
								</div>
								<div id="passwordNoticeLength" class="password-hide">
									<small>Password must be at least 5 characters long.</small>
								</div>
								<div id="passwordNoticeReqChar" class="password-hide">
									<small>Password must contain at least 1 letter and 1 number.</small>
								</div>
							</div>
									<button id="submitButton" type="button" name="button" class="btn btn-primary" disabled>Submit</button>
						</form>
	      </div>
	    </div>
	  </div>

		  <div class="col-sm-6">
		    <div class="card" style="border: none;">
		      <div class="card-body">
		      </div>
		    </div>
		  </div>

</div>
</div>

<p>&nbsp;</p>


