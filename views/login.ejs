<% include ./partials/header %>

<div class="container">
<div class="row">
	<div class="col-sm-6">
		<h1 style="margin: 1.5rem 0">Login</h1>

<% if (message) { %>
    <h2 style="margin: 1.5rem 0"><font color="red"><%= message %></font></h2>
<% } %>
    <form action="/login" method="post">
      <div class="form-group">
        <input type="text" name="username" class="form-control" placeholder="Username">
      </div>
      <div class="form-group">
        <input type="password" name="password" class="form-control" placeholder="Password">
      </div>
      <div class="form-group">
        <button type="submit" name="button" class="btn btn-primary">Login</button>
      </div>
    </form>

		<div class="">
			<p>Don't have an account yet? <a href="/signup">Sign Up</a> here.</p>
		</div>
	</div>
</div>
</div>

<% include ./partials/footer %>
